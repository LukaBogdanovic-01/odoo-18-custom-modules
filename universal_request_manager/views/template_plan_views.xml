<odoo>

    <record id="view_template_plan_form" model="ir.ui.view">
        <field name="name">template.plan.form</field>
        <field name="model">template.plan</field>
        <field name="arch" type="xml">
            <form string="Template Plan">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Aktivnosti">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="position"/>
                                    <field name="goals"/>
                                    <field name="realisation"/>
                                    <field name="deviations"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Rekapitulacija">
                                <field name="recapitulation"/>
                        </page>
                        <page string="Zadaci">
                            <field name="task_ids">
        <list>
            <field name="name"/>
            <field name="user_ids"/>
            <field name="date_deadline"/>
            <field name="stage_id"/>
        </list>
    </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_template_plan_tree" model="ir.ui.view">
        <field name="name">template.plan.list</field>
        <field name="model">template.plan</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_template_plan" model="ir.actions.act_window">
        <field name="name">Templejti</field>
        <field name="res_model">template.plan</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
