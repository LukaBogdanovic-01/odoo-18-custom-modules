<odoo>
    <!-- Action & Menu -->
    <record id="action_ppp_analysis" model="ir.actions.act_window">
        <field name="name">PPP Analysis</field>
        <field name="res_model">ppp.analysis</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <record id="action_ppp_archive" model="ir.actions.act_window">
        <field name="name">PPP Archive</field>
        <field name="res_model">ppp.archive</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'create': False}</field>
    </record>



    <!-- Kanban -->
    <record id="view_ppp_analysis_kanban" model="ir.ui.view">
        <field name="name">ppp.analysis.kanban</field>
        <field name="model">ppp.analysis</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage">
                <field name="description"/>
                <field name="project_id"/>
                <field name="tag_ids"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click">
                            <strong><t t-esc="record.description.value"/></strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form -->
    <record id="view_ppp_analysis_form" model="ir.ui.view">
        <field name="name">ppp.analysis.form</field>
        <field name="model">ppp.analysis</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="description"/>
                        <field name="stage"/>
                        <field name="project_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="create_date" readonly="1"/>
                        <field name="user_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    

    <!-- KANBAN ARHIVE-->
    <record id="view_ppp_archive_kanban" model="ir.ui.view">
        <field name="name">ppp.archive.kanban</field>
        <field name="model">ppp.archive</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="project_id"/>
                <field name="date"/>
                <field name="tag_ids"/>
                <field name="user_id"/>
                <field name="stage"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click">
                            <strong><t t-esc="record.name.value"/></strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- FORM ARHIVE -->
    <record id="view_ppp_archive_form" model="ir.ui.view">
        <field name="name">ppp.archive.form</field>
        <field name="model">ppp.archive</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="date"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="user_id" readonly="1"/>
                        <field name="stage" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>






</odoo>
