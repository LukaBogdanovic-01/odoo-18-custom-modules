<odoo>

    <!-- Search View for Analysis -->
    <record id="view_ppp_analysis_search" model="ir.ui.view">
        <field name="name">ppp.analysis.search</field>
        <field name="model">ppp.analysis</field>
        <field name="arch" type="xml">
            <search string="Search PPP Analysis">
                <field name="description" filter_domain="[('description', 'ilike', self)]"/>
                <field name="tag_ids"/>
                <field name="project_id"/>
                <field name="user_id"/>
            </search>
        </field>
    </record>

    <!-- Search View for Archive -->
    <record id="view_ppp_archive_search" model="ir.ui.view">
        <field name="name">ppp.archive.search</field>
        <field name="model">ppp.archive</field>
        <field name="arch" type="xml">
            <search string="Search PPP Archive">
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="tag_ids"/>
                <field name="project_id"/>
                <field name="user_id"/>
            </search>
        </field>
    </record>


    <!-- Action & Menu -->
    <record id="action_ppp_analysis" model="ir.actions.act_window">
        <field name="name">PPP Analiza</field>
        <field name="res_model">ppp.analysis</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_ppp_analysis_search"/>
    </record>

    <record id="action_ppp_archive" model="ir.actions.act_window">
        <field name="name">Arhiva</field>
        <field name="res_model">ppp.archive</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'create': False}</field>
        <field name="search_view_id" ref="view_ppp_archive_search"/>
    </record>

    <record id="action_ppp_analysis_archive" model="ir.actions.server">
        <field name="name">Arhiviraj</field>
        <field name="model_id" ref="model_ppp_analysis"/>
        <field name="binding_model_id" ref="model_ppp_analysis"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">action = records.action_archive_selected()</field>
    </record>
    




    <!-- Kanban -->
    <record id="view_ppp_analysis_kanban" model="ir.ui.view">
        <field name="name">ppp.analysis.kanban</field>
        <field name="model">ppp.analysis</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage">
                <field name="description"/>
                <field name="project_id"/>
                <field name="tag_ids"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click o_kanban_card">
                            
                            <!-- Opis (samo on ograničen na 3 reda) -->
                            <div style="max-height:4.5em; overflow:hidden;" class="o_text_overflow">
                                <field name="description"/>
                            </div>

                            <!-- Projekat uvijek prikazan -->
                            <div class="text-muted mt-1">
                                <field name="project_id"/>
                            </div>
                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <!-- Form -->
    <record id="view_ppp_analysis_form" model="ir.ui.view">
    <field name="name">ppp.analysis.form</field>
    <field name="model">ppp.analysis</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <!-- description ostaje van notebooka -->
                    <field name="description"/>
                </group>
                <notebook>
                    <!-- PPP tab -->
                    <page string="PPP">
                        <group>
                            <field name="assigned_user_ids" widget="many2many_tags"/>
                            <field name="stage" widget="radio" options="{'horizontal': true}"/>
                            <field name="project_id"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="create_date" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                    </page>

                    <!-- Aktivnosti tab -->
                    <page string="Aktivnosti">
                        <group>
                            <field name="activity_ids"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>


    <!-- List (Tree) View -->
    <record id="view_ppp_analysis_tree" model="ir.ui.view">
        <field name="name">ppp.analysis.list</field>
        <field name="model">ppp.analysis</field>
        <field name="arch" type="xml">
            <list string="PPP Analysis">
                <field name="description"/>
                <field name="assigned_user_ids"/>
                <field name="stage"/>
                <field name="project_id"/>
                <field name="tag_ids"/>
                <field name="user_id"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>


    

    <!-- KANBAN ARHIVE-->
    <record id="view_ppp_archive_kanban" model="ir.ui.view">
        <field name="name">ppp.archive.kanban</field>
        <field name="model">ppp.archive</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="project_id"/>
                <field name="date"/>
                <field name="tag_ids"/>
                <field name="user_id"/>
                <field name="stage"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click o_kanban_card">

                            <!-- Opis (ograničen na 3 reda, prikazuje name umjesto description) -->
                            <div style="max-height:4.5em; overflow:hidden;" class="o_text_overflow">
                                <field name="name"/>
                            </div>

                            <!-- Projekat uvijek prikazan -->
                            <div class="text-muted mt-1">
                                <field name="project_id"/>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- FORM ARHIVE -->
    <record id="view_ppp_archive_form" model="ir.ui.view">
        <field name="name">ppp.archive.form</field>
        <field name="model">ppp.archive</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div style="float: right; margin: 0 0 10px 10px;">                    
                        <button name="action_restore"
                                type="object"
                                string="Restore"
                                class="btn btn-primary"
                                style="min-width:100px;"
                                groups="base.group_system"
                                invisible="user_id == uid"/>
                                
                        <button name="action_restore"
                                type="object"
                                string="Restore"
                                class="btn btn-primary"
                                style="min-width:100px;"
                                groups="base.group_user"
                                invisible="user_id != uid"/>
                    </div>
                    <group>
                    <field name="user_id" invisible="1"/>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="date" readonly="1"/>
                        <field name="user_id" readonly="1"/>
                        <field name="stage" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
