    <!-- FORM I AKCIJA ZA SWOT 2 -->
    <record id="view_swot_form" model="ir.ui.view">
        <field name="name">swot.form</field>
        <field name="model">swot.analysis2</field>
        <field name="arch" type="xml">
            <form string="SWOT Analiza">
                <style>
                    .o_form_sheet table td,
                    .o_form_sheet table th {
                        border: 1px solid #999 !important;
                        padding: 6px;
                        text-align: left;         /* tekst uvijek lijevo */
                        vertical-align: middle;   /* vertikalno centriran */
                        word-wrap: break-word;
                        white-space: normal;
                    }
                    /* prvi red (zaglavlja) */
                    .o_form_sheet table tr:first-child th {
                        background-color: #f2f2f2;
                        font-weight: bold;
                    }
                    /* prva kolona */
                    .o_form_sheet table td:first-child,
                    .o_form_sheet table th:first-child {
                        background-color: #f2f2f2;
                        font-weight: bold;
                    }
                </style>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                    </group>

                    <div style="margin-top:40px;"></div>
                    <group>
                        <table class="table table-bordered" style="width:100%; text-align:left; table-layout: fixed;">
                            <!-- Zaglavlje kolona -->
