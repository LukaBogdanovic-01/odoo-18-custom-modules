<odoo>

    <record id="crm_case_kanban_view_leads_inherit_name_field" model="ir.ui.view">
        <field name="name">crm.case.kanban.view.leads.inherit.name.field</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
        <!-- Zamjenjujemo partner_id sa name -->
        <xpath expr="//field[@name='partner_id']" position="replace">
            <field name="name" placeholder="e.g. Product Pricing"/>
        </xpath>
        </field>
    </record>


    <record id="view_crm_lead_form_sportis" model="ir.ui.view">
        <field name="name">crm.lead.form.sportis</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//header/button[@name='action_set_won_rainbowman']" position="before">
                <button name="action_set_new_quotation"
                        string="New Quotation"
                        type="object"
                        class="btn-secondary"
                        attrs="{'invisible': [('stage_name', '=', 'New Quotation')]}"/>
            </xpath>

            <xpath expr="//sheet" position="inside">
                <field name="stage_name" invisible="1"/>
            </xpath>


            <xpath expr="//header" position="inside">
                <field name="x_secondary_stage" widget="statusbar" class="float-end" options="{'clickable': True}"/>
            </xpath>


            <xpath expr="//field[@name='probability']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='probability']/span" position="replace"/>
            <xpath expr="//button[@name='action_set_automated_probability']" position="replace"/>
            <xpath expr="//field[@name='automated_probability']" position="replace"/>
            <xpath expr="//div[@class='d-flex align-items-end']" position="replace">
                <div class="d-flex align-items-end">
                    <field name="company_currency" invisible="1"/>
                    <field name="expected_revenue" class="oe_inline o_input_13ch" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                    <span class="oe_grey p-2"> + </span>
                    <field name="recurring_revenue" class="oe_inline o_input_10ch" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                    <span class="oe_grey p-2">e.g.</span>
                     <field name="recurring_plan" class="oe_inline o_input_12ch" placeholder="Monthly"/>
                </div>
            </xpath>


            <xpath expr="//field[@name='lead_properties']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            
            <xpath expr="//group[@name='opportunity_partner']//field[@name='partner_id']" position="before">
                <separator string="INFORMATION"/>
                <field name="x_company_name"/>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']//field[@name='partner_id']" position="after">
                <field name="x_contact_name"/>
            </xpath>
            <xpath expr="//div[@class='o_row o_row_readonly'][.//field[@name='phone']]" position="after">
    <field name="x_mobile_from_contact"/>
</xpath>








            <!-- Desna kolona -->
             <xpath expr="//field[@name='user_id']" position="replace"/>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="x_priority"/>
                <field name="x_player_position"/>
                <field name="x_player_nationality"/>
                <field name="x_country_request"/>
                <field name="x_file" filename="name"/>
            </xpath>


            <xpath expr="//page[@name='lead']" position="replace">
                <page name="extra_info" string="Extra Information">
                    <group>
                        <group>
                            <field name="other_contact"/>
                            <field name="function" string="Job Position"/>
                            <field name="mobile"/>
                            <field name="website"/>
                            <field name="description" string="Notes about contact"/>
                        </group>
                        <group>
                            <separator string="Tracking"/>
                            <field name="create_uid" string="Created by"/>
                            <field name="create_date" string="Created on"/>
                            <field name="user_id" string="Salesperson"/>
                            <field name="team_id" string="Sales Team"/>
                            <field name="day_open"/>
                            <field name="date_closed" string="Days to Close"/>
                        </group>
                    </group>
                </page>
            </xpath>  







        </field>
    </record>




    <record id="view_crm_lead_kanban_inherit_sportis" model="ir.ui.view">
        <field name="name">crm.lead.kanban.inherit.sportis</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//t[@t-name='kanban-box']" position="replace">
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click oe_kanban_card">
                        <div class="o_kanban_record_title">
                            <strong><field name="name"/></strong>
                        </div>
                        <div><field name="x_player_position"/></div> 
                        <div><field name="x_country_request"/></div> 
                        <div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                        <div><field name="phone" widget="phone"/></div>
                        <div><field name="x_company_name"/></div>
                        <!-- Bottom bar -->
                        <div class="oe_kanban_footer o_kanban_record_bottom d-flex justify-content-between mt-1">
                            <div>
                                <field name="priority" widget="priority"/>
                                <field name="activity_ids" widget="kanban_activity"/>
                            </div>
                            <div>
                                <field name="user_id" widget="many2one_avatar_user"/>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
        </field>
    </record>







</odoo>
